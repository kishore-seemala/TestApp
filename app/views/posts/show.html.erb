<%= flash[:notice] %>

<%= link_to "view all posts", posts_path %>

<hr />

<div style="padding : 10px; margin: 10px; background-color:#23ffef; border: 2px solid #aaa">

	<strong><%= @post.title %></strong>
	<br />
	<%= @post.body%>
	<br /><br />
	<strong><small>Category: <%= @post.category.category %></small>
	<br />
	<small>posted on :<%= format_date(@post.created_at)%></small></strong>

</div>

<%= link_to "Edit this post", edit_post_path(@post) %> |
<%= link_to "Delete this post", post_path(@post), :method => :delete, :data => {:confirm => "Are you sure?"} %> | 
<%= link_to_function "Add Comment", "$('#new_comment').show()"%>

<h3>Comments</h3>
<%= render :partial => "comments/form" %>
<%= render :partial => "comments/comments" %>